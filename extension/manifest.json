{
  "manifest_version": 3,
  "name": "GrokGuard - AI Safety for X.com",
  "version": "1.0.0",
  "description": "Agentic AI system that detects scams, impersonators, and bait on X.com using multi-agent debate",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://x.com/*",
    "https://twitter.com/*",
    "http://localhost:3000/*",
    "http://127.0.0.1:3000/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://x.com/*",
        "https://twitter.com/*"
      ],
      "js": ["content.js", "feed-monitor.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["overlay.html"],
      "matches": ["https://x.com/*", "https://twitter.com/*"]
    }
  ]
}
